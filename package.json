{
  "name": "split-host",
  "version": "0.1.0",
  "license": "ISC",
  "description": "Split host into hostname and port",
  "keywords": [
    "host",
    "hostname",
    "parse",
    "port",
    "split"
  ],
  "homepage": "https://github.com/JsCommunity/split-host",
  "bugs": "https://github.com/JsCommunity/split-host/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/JsCommunity/split-host.git"
  },
  "author": {
    "name": "Julien Fontanet",
    "email": "julien.fontanet@isonoe.net"
  },
  "preferGlobal": false,
  "main": "dist/",
  "bin": {},
  "files": [
    "dist/"
  ],
  "engines": {
    "node": ">=4"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-preset-env": "^1.6.1",
    "cross-env": "^5.1.0",
    "dependency-check": "^2.9.1",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "rimraf": "^2.6.2",
    "standard": "^10.0.3"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production babel --source-maps --out-dir=dist/ src/",
    "commitmsg": "npm test",
    "dev": "cross-env NODE_ENV=development babel --watch --source-maps --out-dir=dist/ src/",
    "dev-test": "jest --bail --watch",
    "posttest": "standard && dependency-check ./package.json",
    "prebuild": "rimraf dist/",
    "predev": "npm run prebuild",
    "prepublish": "npm run build",
    "test": "jest"
  },
  "babel": {
    "env": {
      "test": {
        "ignore": null
      }
    },
    "ignore": "*.spec.js",
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 4
          }
        }
      ]
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testRegex": "\\.spec\\.js$"
  },
  "standard": {
    "ignore": [
      "dist"
    ],
    "parser": "babel-eslint"
  }
}
